/* pages/souye/souye.wxss */
page{
  background-color: #f8f8f8; 
  font-size: 27rpx; 
}

/** title搜索样式 **/
view.search {
    display: flex;
    flex-direction: row;
    height: 90rpx;
    background: #efeff4;
    align-items: center;
}

view.searchItem {
    display: flex;
    width: 90%;
    background: #dfdfdf;
    flex-direction: row;
    border-radius: 50rpx;
    margin-right: 20rpx;
    margin-left: 40rpx;
}

view.searchItem image {
    height: 42rpx;
    width: 42rpx;
    align-self: center;
    margin-left: 20rpx;
    margin-right: 20rpx;
}

view.searchItem input {
    flex: 1;
    font-size: 30rpx;
    border-radius: 50rpx;
    background-color: #dfdfdf; padding:5rpx 20rpx; font-size: 0.9rem;
}

/** banner图片设置大小 **/
.slide-image{width: 100%;height: 100%}


/** 推荐样式 **/
.directSeeding-item .warpperFirst {height: 100%;background-color: #BAAA91;}
.guess-titleAll{width: 100%; height: 80rpx; overflow: hidden; line-height: 80rpx;}
.guess-titleAll .guess-title{float: left; color:#111; font-weight: 600;font-size: 1.2em; }
.guess-titleAll .guess-click{float: left; font-size: 0.9em; color:#f86442; margin-left:10rpx; margin-top: 3rpx; text-indent: 10rpx;}
.guess-titleAll .guess-images-click{float: left; line-height: 84rpx; margin-top:20rpx;}
.guess-titleAll .guess-more{float: right; color: #666; margin-right:10rpx;}
.guess-titleAll .guess-more:after{content: ''; position: relative; display: inline-block; height: 12rpx; width: 12rpx; border-width: 4rpx 4rpx 0 0; border-color: #adadad; border-style: solid; transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);}
.guess-example{overflow: hidden;}
.guess-example__warpper{display: flex; justify-content: space-between; align-items: flex-start; flex-direction: row; flex-wrap: wrap;}
.guess-images-warp{width:224rpx; margin-bottom: 18rpx; position: relative;}
.guess-example__warpper .guess-images{background-color: #e3e4e5; width: 224rpx; height: 224rpx; margin: 10rpx 0; border-radius: 10rpx;}
.choice-guess,.FineQuality{margin-top:15rpx; padding: 0 20rpx; display: block; background-color: rgb(255, 255, 255);}
.FineQuality-icon{width: 18rpx; height: 18rpx; position: absolute; left: -35rpx; top:5rpx; transform: rotate(-45deg);}
.FineQualityBac{width: 0; height: 0; border-left:40rpx solid #ff4612; border-bottom:40rpx solid transparent; position: absolute; left: 0; top: 10rpx;}

.FineQualityText1{color:#fc6441; font-size: 1.2em; margin-right:7rpx;}
.FineQualityText1 text{color:#b3b3b3; padding-left:10rpx; font-size: 0.7em;}
.FineQualityText2{width:90rpx; height: 30rpx; font-size: 0.7em; color: #fff; background-color: #c1782a; display: block; text-align: center; margin-top:10rpx; border-radius: 7rpx;}

.renovate{width: 155rpx; background-color: #ffece8; height: 56.25rpx; border-radius: 50rpx; display: flex; justify-content:center; align-items: center; color:#f86442; margin: 5rpx auto 20rpx;}
.renovate .renovate-icon{width: 35rpx; height: 35rpx; margin-right:10rpx;}


.hotBooks-right .hotBooks__title,
.hotBooks-right .hotBooksF{overflow: hidden; white-space: nowrap; text-overflow:ellipsis;}


/** 书籍列表样式 **/
.hotBooks{background-color: #fff; display: block; padding: 0 20rpx; margin-top: 15rpx;}
.hotBooks-lists{overflow: hidden;}
.hotBooks-lists .item{display: flex; justify-content: flex-start; font-size: 1.1em; padding: 25rpx 0 25rpx 0;}
.hotBooks-lists .hotBooks-left__image{float: left;  border-radius: 4rpx;}
.hotBooks-lists .item .hotBooks-right{margin-left:25rpx; padding: 0 0 10rpx 0; width: 80%; border-bottom:1rpx solid #eaeaea; overflow: hidden; white-space: nowrap; text-overflow:ellipsis;}
.hotBooks-right .hotBooks__title,
.hotBooks-right .hotBooksF{overflow: hidden; white-space: nowrap; text-overflow:ellipsis;}
.hotBooks-right .detailS{color:#999; font-size: 0.8em; display: flex; justify-content: flex-start; align-self: center; margin-top: 10rpx;}
.hotBooks-right .detailS text{margin:0 30rpx 0 10rpx;}
.play-icon{width: 27rpx; height: 27rpx;}


